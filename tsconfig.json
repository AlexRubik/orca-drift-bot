{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"lib": ["es2020", "dom"],
		"outDir": "dist",
		"rootDir": "src",
		"rootDirs": ["src", "drift-worker/src"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "nodenext"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
